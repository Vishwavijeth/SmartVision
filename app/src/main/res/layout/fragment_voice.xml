<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_page_bg"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Voice"
            android:textSize="30sp"
            android:textColor="#282828"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/select_any_of_the_following_to_get_started"
            android:textColor="#989898"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/voiceToText"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:elevation="3dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="8dp"
            android:layout_height="@dimen/mainPageCardHeight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:textColor="#333333"
                android:text="Voice to Text"
                android:textSize="20sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/textToVoice"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="8dp"
            android:layout_height="@dimen/mainPageCardHeight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text to Voice"
                android:textColor="#333333"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>