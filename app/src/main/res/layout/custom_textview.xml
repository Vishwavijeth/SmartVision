<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/cardedge"
    android:elevation="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/algoimage"
        android:paddingStart="20dp"
        android:paddingTop="3dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:src="@drawable/model_management"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:paddingStart="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customModelTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model Management"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/algotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to load model"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/modelfileDeleteBt"
        android:layout_height="24dp"
        android:layout_width="match_parent"
        android:layout_gravity="center|end"
        android:paddingStart="60dp"
        android:src="@drawable/delete"/>

</LinearLayout>